<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/playerOne"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Player 1"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:textSize="21sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="0"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="@+id/playerOne"
        app:layout_constraintTop_toBottomOf="@+id/playerOne"

        />

    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textSize="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
        />
    
    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/playerTwo"
        app:layout_constraintRight_toRightOf="@+id/playerTwo"
        android:layout_marginRight="28dp" />
    
    <TextView
        android:id="@+id/playerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textAlignment="center"


        app:layout_constraintTop_toBottomOf="@+id/playerOneScore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        tools:ignore="UnknownId" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:textSize="60sp"

            android:textStyle="bold"
            android:backgroundTint="#423F43"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/playerStatus"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btn_0"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        android:layout_marginLeft="3dp"
        />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btn_1"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_0"
        app:layout_constraintLeft_toLeftOf="@id/btn_0"

        />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="3dp"

        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        app:layout_constraintTop_toTopOf="@id/btn_3" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btn_4"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        android:layout_marginLeft="3dp"
        />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintLeft_toLeftOf="@id/btn_3"
        android:layout_marginTop="3dp"
        />
    <Button
        android:id="@+id/btn_7"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btn_6"
        app:layout_constraintLeft_toRightOf="@id/btn_6"
        android:layout_marginLeft="3dp"
        />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#423F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btn_7"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />

    <Button
        android:id="@+id/resetGame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#E14"
        android:text="Reset Game"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_6" />

    <ImageView
        android:id="@+id/win036"
        android:layout_width="388dp"
        android:layout_height="377dp"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_6"
        app:layout_constraintEnd_toEndOf="@+id/btn_5"
        app:layout_constraintStart_toStartOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_0"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/mark3" />

    <Button
        android:id="@+id/playagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="play again"
        app:layout_constraintBottom_toBottomOf="@+id/resetGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/win147"
        android:layout_width="385dp"
        android:layout_height="371dp"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_7"
        app:layout_constraintEnd_toEndOf="@+id/btn_5"
        app:layout_constraintStart_toStartOf="@+id/win036"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:srcCompat="@drawable/mark4" />

    <ImageView
        android:id="@+id/win258"
        android:layout_width="387dp"
        android:layout_height="375dp"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/win036"
        app:layout_constraintEnd_toEndOf="@+id/win036"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/win036"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/mark5" />

    <ImageView
        android:id="@+id/win012"
        android:layout_width="370dp"
        android:layout_height="367dp"
        android:rotation="90"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/win258"
        app:layout_constraintEnd_toEndOf="@+id/btn_5"
        app:layout_constraintStart_toStartOf="@+id/win036"
        app:layout_constraintTop_toTopOf="@+id/win036"
        app:srcCompat="@drawable/mark3" />

    <ImageView
        android:id="@+id/win345"
        android:layout_width="378dp"
        android:layout_height="367dp"
        android:rotation="90"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/win147"
        app:layout_constraintEnd_toEndOf="@+id/win036"
        app:layout_constraintStart_toStartOf="@+id/win012"
        app:layout_constraintTop_toTopOf="@+id/win036"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/mark4" />

    <ImageView
        android:id="@+id/win678"
        android:layout_width="367dp"
        android:layout_height="356dp"
        android:rotation="90"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_7"
        app:layout_constraintEnd_toEndOf="@+id/win036"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/win147"
        app:layout_constraintTop_toTopOf="@+id/win036"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mark5" />

    <ImageView
        android:id="@+id/win048"
        android:layout_width="376dp"
        android:layout_height="359dp"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_7"
        app:layout_constraintEnd_toEndOf="@+id/win036"
        app:layout_constraintStart_toStartOf="@+id/win036"
        app:layout_constraintTop_toTopOf="@+id/win147"
        app:srcCompat="@drawable/mark1" />

    <ImageView
        android:id="@+id/win246"
        android:layout_width="351dp"
        android:layout_height="367dp"
        android:translationZ="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/win678"
        app:layout_constraintEnd_toEndOf="@+id/win012"
        app:layout_constraintStart_toStartOf="@+id/win147"
        app:layout_constraintTop_toTopOf="@+id/win036"
        app:srcCompat="@drawable/mark2" />


</androidx.constraintlayout.widget.ConstraintLayout>